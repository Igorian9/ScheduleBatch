    <validationRules>
        <fullName>NotAllowChangetheOpportunityDescript</fullName>
        <active>true</active>
        <description>Does not allow to change the Opportunity Product, if the corresponding her Opportunity record has the status of &apos;Closed Won&apos; or &apos;Closed&apos; Lost</description>
        <errorConditionFormula>NOT(ISNEW()) &amp;&amp; OR(
 ISPICKVAL(Opportunity.StageName ,&apos;Closed Won&apos;),
 ISPICKVAL(Opportunity.StageName , &apos;Closed Lost&apos;) )</errorConditionFormula>
        <errorMessage>Status is &apos;Closed Won&apos; or &apos;Closed Lost&apos;</errorMessage>
    </validationRules>
